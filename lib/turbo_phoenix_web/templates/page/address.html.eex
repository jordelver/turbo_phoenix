<h1 class="title is-4 has-text-centered has-text-primary">Address</h1>

<%= form_for @changeset, Routes.page_path(@conn, :validate, :address), [novalidate: :novalidate, "data-controller": :signup, "data-action": "submit->signup#submit"], fn f -> %>

<div class="container <%= transition(@conn) %>">

  <fieldset data-target="signup.fieldset">

  <div class="field">
    <%= label f, :address1, "Address 1", class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= text_input f, :address1, class: "input is-medium #{field_error(f, :address1)}", placeholder: "Address 1" %>
      <span class="icon is-small is-left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"
          aria-hidden="true" role="img">
          <path fill="currentColor" d="M280.37 148.26L96 300.11V464a16 16 0 0 0
            16 16l112.06-.29a16 16 0 0 0 15.92-16V368a16 16 0 0 1 16-16h64a16 16
            0 0 1 16 16v95.64a16 16 0 0 0 16 16.05L464 480a16 16 0 0 0
            16-16V300L295.67 148.26a12.19 12.19 0 0 0-15.3 0zM571.6 251.47L488
            182.56V44.05a12 12 0 0 0-12-12h-56a12 12 0 0 0-12 12v72.61L318.47
            43a48 48 0 0 0-61 0L4.34 251.47a12 12 0 0 0-1.6 16.9l25.5 31A12 12 0
            0 0 45.15 301l235.22-193.74a12.19 12.19 0 0 1 15.3 0L530.9 301a12 12
            0 0 0 16.9-1.6l25.5-31a12 12 0 0 0-1.7-16.93z"/>
        </svg>
      </span>
      <%= error_icon f, :address1 %>
      <%= error_tag f, :address1 %>
    </div>
  </div>

  <div class="field">
    <%= label f, :address2, "Address 2", class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= text_input f, :address2, class: "input is-medium #{field_error(f, :address2)}", placeholder: "Address 2" %>
      <span class="icon is-small is-left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"
          aria-hidden="true" role="img">
          <path fill="currentColor" d="M280.37 148.26L96 300.11V464a16 16 0 0 0
            16 16l112.06-.29a16 16 0 0 0 15.92-16V368a16 16 0 0 1 16-16h64a16 16
            0 0 1 16 16v95.64a16 16 0 0 0 16 16.05L464 480a16 16 0 0 0
            16-16V300L295.67 148.26a12.19 12.19 0 0 0-15.3 0zM571.6 251.47L488
            182.56V44.05a12 12 0 0 0-12-12h-56a12 12 0 0 0-12 12v72.61L318.47
            43a48 48 0 0 0-61 0L4.34 251.47a12 12 0 0 0-1.6 16.9l25.5 31A12 12 0
            0 0 45.15 301l235.22-193.74a12.19 12.19 0 0 1 15.3 0L530.9 301a12 12
            0 0 0 16.9-1.6l25.5-31a12 12 0 0 0-1.7-16.93z"/>
        </svg>
      </span>
      <%= error_icon f, :address2 %>
      <%= error_tag f, :address2 %>
    </div>
  </div>

  <div class="field">
    <%= label f, :town, class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= text_input f, :town, class: "input is-medium #{field_error(f, :town)}", placeholder: "Town" %>
      <span class="icon is-small is-left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"
          aria-hidden="true" role="img">
          <path fill="currentColor" d="M280.37 148.26L96 300.11V464a16 16 0 0 0
            16 16l112.06-.29a16 16 0 0 0 15.92-16V368a16 16 0 0 1 16-16h64a16 16
            0 0 1 16 16v95.64a16 16 0 0 0 16 16.05L464 480a16 16 0 0 0
            16-16V300L295.67 148.26a12.19 12.19 0 0 0-15.3 0zM571.6 251.47L488
            182.56V44.05a12 12 0 0 0-12-12h-56a12 12 0 0 0-12 12v72.61L318.47
            43a48 48 0 0 0-61 0L4.34 251.47a12 12 0 0 0-1.6 16.9l25.5 31A12 12 0
            0 0 45.15 301l235.22-193.74a12.19 12.19 0 0 1 15.3 0L530.9 301a12 12
            0 0 0 16.9-1.6l25.5-31a12 12 0 0 0-1.7-16.93z"/>
        </svg>
      </span>
      <%= error_icon f, :town %>
      <%= error_tag f, :town %>
    </div>
  </div>

  <div class="field">
    <%= label f, :postcode, class: "label" %>
    <div class="control has-icons-left has-icons-right">
      <%= text_input f, :postcode, class: "input is-medium #{field_error(f, :postcode)}", placeholder: "Postcode" %>
      <span class="icon is-small is-left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"
          aria-hidden="true" role="img">
          <path fill="currentColor" d="M502.3 190.8c3.9-3.1 9.7-.2 9.7
            4.7V400c0 26.5-21.5 48-48 48H48c-26.5 0-48-21.5-48-48V195.6c0-5
            5.7-7.8 9.7-4.7 22.4 17.4 52.1 39.5 154.1 113.6 21.1 15.4 56.7 47.8
            92.2 47.6 35.7.3 72-32.8 92.3-47.6 102-74.1 131.6-96.3 154-113.7zM256
            320c23.2.4 56.6-29.2 73.4-41.4 132.7-96.3 142.8-104.7 173.4-128.7
            5.8-4.5 9.2-11.5 9.2-18.9v-19c0-26.5-21.5-48-48-48H48C21.5 64 0 85.5
            0 112v19c0 7.4 3.4 14.3 9.2 18.9 30.6 23.9 40.7 32.4 173.4 128.7 16.8
            12.2 50.2 41.8 73.4 41.4z"/>
        </svg>
      </span>
      <%= error_icon f, :postcode %>
      <%= error_tag f, :postcode %>
    </div>
  </div>

  <div class="field">
    <%= label f, :country, class: "label" %>
    <div class="control has-icons-left">
      <span class="select is-medium is-fullwidth">
        <%= select f, :country, ["United Kindom", "United States of America", "Anywhere else"] %>
      </span>
      <span class="icon is-small is-left">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 496 512"
          aria-hidden="true" role="img">
          <path fill="currentColor" d="M336.5 160C322 70.7 287.8 8 248 8s-74
            62.7-88.5 152h177zM152 256c0 22.2 1.2 43.5 3.3 64h185.3c2.1-20.5
